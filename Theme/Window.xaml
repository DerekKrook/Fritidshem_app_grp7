<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Theme.Properties">

    <Style x:Key="MyWindowStyle" TargetType="Window">
        <Setter Property="Height" Value="720"/>
        <Setter Property="Width" Value="1280"/>
        <Setter Property="Control.Background" Value="{DynamicResource  BackgroundGradient}"/>
        <Setter Property="FontFamily" Value="Yu Gothic UI Semibolds" />
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="WindowState" Value="Maximized"/>
    </Style>
</ResourceDictionary>