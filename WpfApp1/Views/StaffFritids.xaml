<Window x:Class="WpfApp1.Views.StaffFritids"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Views"
        mc:Ignorable="d"
        Title="StaffFritids" Height="450" Width="800">
    <Grid>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="263" Margin="30,116,0,0" VerticalAlignment="Top" Width="627">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Barn" Width="200" DisplayMemberBinding="{Binding Firstname}"/>
                    <GridViewColumn Header="Vårdnadshavare" Width="200" DisplayMemberBinding="{Binding Lastname}"/>
                    <GridViewColumn Header="Dag" Width="120" DisplayMemberBinding="{Binding Day}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
