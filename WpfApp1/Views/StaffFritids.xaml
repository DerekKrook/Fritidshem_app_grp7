<Window x:Class="WpfApp1.Views.StaffFritids"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Views"
        mc:Ignorable="d"
        Title="StaffFritids" Height="450" Width="800">
    <Grid>
        <ListView x:Name="listViewTotalFritids" HorizontalAlignment="Left" Height="255" Margin="95,94,0,0" VerticalAlignment="Top" Width="606">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Barn" Width="150" DisplayMemberBinding="{Binding Child}"/>
                    <GridViewColumn Header="Förälder" Width="150" DisplayMemberBinding="{Binding Parent}"/>
                    <GridViewColumn Header="Dag" Width="150" DisplayMemberBinding="{Binding Day}"/>
                    <GridViewColumn Header="Kommentar" Width="150" DisplayMemberBinding="{Binding Comment}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
