<Window x:Class="WpfApp1.Views.ListviewGuardian"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Views"
        mc:Ignorable="d"
        Title="ListviewGuardian" Height="450" Width="800">
    <Grid>
        <ListView HorizontalAlignment="Left" Height="275" Margin="172,87,0,0" VerticalAlignment="Top" Width="470">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Förnamn" Width="220" DisplayMemberBinding="{Binding Firstname}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
