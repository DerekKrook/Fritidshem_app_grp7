<Window x:Class="WpfApp1.Views.ListviewGuardian"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Views"
        mc:Ignorable="d"
        Title="ListviewGuardian" Height="450" Width="800">
    <Grid>
        <ListView x:Name="listViewGuardian" HorizontalAlignment="Left" Height="275" Margin="168,37,0,0" VerticalAlignment="Top" Width="456">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Förnamn" Width="150" DisplayMemberBinding="{Binding Firstname}"/>
                    <GridViewColumn Header="Efternamn" Width="150" DisplayMemberBinding="{Binding Lastname}"/>
                    <GridViewColumn Header="Email" Width="150" DisplayMemberBinding="{Binding Email}"/>

                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnSearchGuardian" Content="Sök" HorizontalAlignment="Left" Margin="46,144,0,0" VerticalAlignment="Top" Width="75" Click="BtnSearchGuardian_Click"/>
        <TextBox x:Name="txtLastNameGuardian" HorizontalAlignment="Left" Height="23" Margin="26,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
