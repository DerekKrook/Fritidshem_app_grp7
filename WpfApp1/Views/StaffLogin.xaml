<Window x:Class="WpfApp1.Views.StaffLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Views"
        mc:Ignorable="d"
        Title="StaffLogin" Height="450" Width="800" Activated="Window_Activated">
    <Grid>
        <ListView x:Name="listViewTotalStaff" HorizontalAlignment="Left" Height="254" Margin="95,94,0,0" VerticalAlignment="Top" Width="300
                  " SelectionChanged="ListViewTotalStaff_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Förnamn" Width="150" DisplayMemberBinding="{Binding Firstname}"/>
                    <GridViewColumn Header="Efternamn" Width="150" DisplayMemberBinding="{Binding Lastname}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
