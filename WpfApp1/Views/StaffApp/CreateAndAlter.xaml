<Window x:Class="WpfApp1.CreateAndAlter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
         Title="ListviewChildrenAndGuardians" Style="{StaticResource MyWindowStyle}" Loaded="Window_Loaded">
    <Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="358" Margin="29,77,0,0" VerticalAlignment="Top" Width="838">
            <TabItem x:Name="Barn" Header="Barn" Loaded="Barn_Loaded">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="78*"/>
                        <ColumnDefinition Width="81*"/>
                        <ColumnDefinition Width="60*"/>
                        <ColumnDefinition Width="287*"/>
                        <ColumnDefinition Width="109*"/>
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="ListViewChildAndGuardian" HorizontalAlignment="Left" Height="325" VerticalAlignment="Top" Width="829"  Grid.ColumnSpan="5">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Förnamn" Width="200" DisplayMemberBinding="{Binding Firstname}"/>
                                <GridViewColumn Header="Efternamn" Width="200" DisplayMemberBinding="{Binding Lastname}"/>
                                <GridViewColumn Header="Klass" Width="200" DisplayMemberBinding="{Binding Class}"/>
                                <GridViewColumn Header="Vårdnadshavare" Width="230" DisplayMemberBinding="{Binding Guardian}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem x:Name="Vårdnadshavare" Header="Vårdnadshavare" Loaded="Vårdnadshavare_Loaded">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,33">
                    <ListView x:Name="ListViewStaff1_Class2" Height="325" VerticalAlignment="Top" HorizontalAlignment="Left" Width="829" Margin="0,0,0,-34">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Förnamn" Width="180" DisplayMemberBinding="{Binding Firstname}"/>
                                <GridViewColumn Header="Efternamn" Width="180" DisplayMemberBinding="{Binding Lastname}"/>
                                <GridViewColumn Header="Epost" Width="200" DisplayMemberBinding="{Binding Epost}"/>
                                <GridViewColumn Header="Telefon" Width="150" DisplayMemberBinding="{Binding Phone}"/>
                                <GridViewColumn Header="Barn" Width="100" DisplayMemberBinding="{Binding Child}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
        </TabControl>


        <TextBox x:Name="txtboxFirstName" HorizontalAlignment="Right" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="135" Margin="0,481,999,0" />
        <Label x:Name="lblFirstName" Content="Förnamn" HorizontalAlignment="Left" Margin="30,481,0,0" VerticalAlignment="Top" Height="30" />

        <TextBox x:Name="txtboxLastName" HorizontalAlignment="Right" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Width="135" Margin="0,0,999,167" />
        <Label x:Name="lblLastName" Content="Efternamn" HorizontalAlignment="Left" Margin="30,0,0,167" VerticalAlignment="Bottom" Height="30" />

        <TextBox x:Name="txtboxPhone" HorizontalAlignment="Right" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="135" Margin="0,481,761,0" IsEnabled="False" />
        <Label x:Name="lblPhone" Content="Telefon" HorizontalAlignment="Left" Margin="307,481,0,0" VerticalAlignment="Top" Height="30" IsEnabled="False"/>
        <TextBox x:Name="txtboxEmail" HorizontalAlignment="Right" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="135" Margin="0,523,761,0" IsEnabled="False" />
        <Label x:Name="lblEmail" Content="Epost" HorizontalAlignment="Left" Margin="307,523,0,0" VerticalAlignment="Top" Height="30" IsEnabled="False" />
        <TextBox x:Name="txtboxClass" HorizontalAlignment="Right" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="135" Margin="0,570,999,0" />
        <Label x:Name="lblClass" Content="Klass" HorizontalAlignment="Left" Margin="30,570,0,0" VerticalAlignment="Top" Height="30" />
        <Button x:Name="btnAddNew" Content="Lägg till" HorizontalAlignment="Left" Margin="30,670,0,0" VerticalAlignment="Top" Width="119" Height="30" IsEnabled="False" Click="BtnAddNew_Click"/>
        <Button x:Name="btnChange" Content="Spara" HorizontalAlignment="Left" Margin="175,670,0,0" VerticalAlignment="Top" Width="119" Height="30" Click="BtnChange_Click"/>
        <TextBox x:Name="txtboxGuardian" HorizontalAlignment="Right" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="135" Margin="0,614,999,0" />
        <Label x:Name="lblGuardian" Content="Vårdnadshavare" HorizontalAlignment="Left" Margin="30,614,0,0" VerticalAlignment="Top" Height="30" />
        <Button x:Name="btnRemove" Content="Ta bort" HorizontalAlignment="Left" Margin="479,670,0,0" VerticalAlignment="Top" Width="119" Height="30" Click="BtnRemove_Click" />
        <Button x:Name="btnCancel" Content="Avbryt" HorizontalAlignment="Left" Margin="329,670,0,0" VerticalAlignment="Top" Width="119" Height="30" RenderTransformOrigin="0.437,0.833" Click="BtnCancel_Click" />
        <Label x:Name="lblChangeInfo" Content="Välj person i listan" HorizontalAlignment="Left" Margin="29,440,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="lblStaffFirstname" Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
