<Window x:Class="WpfApp1.ListViewStaff"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ListViewStaff" Style="{StaticResource MyWindowStyle}" Activated="Window_Activated">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="14*"/>
        </Grid.RowDefinitions>

        <local:StaffMenu Grid.Row="0">

        </local:StaffMenu>

        <ListView x:Name="ListViewStaff1" HorizontalAlignment="Left" Height="280" Margin="117,93,0,0" VerticalAlignment="Top" Width="623" Grid.Row="1" Grid.RowSpan="2" SelectionChanged="ListViewStaff1_SelectionChanged_1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Förnamn" Width="150" DisplayMemberBinding="{Binding Firstname}"/>
                    <GridViewColumn Header="Efternamn" Width="150" DisplayMemberBinding="{Binding Lastname}"/>
                    <GridViewColumn Header="Klass" Width="170" DisplayMemberBinding="{Binding Class}"/>
                    <GridViewColumn Header="Hem själv" Width="100" DisplayMemberBinding="{Binding LeaveAlone}"/>
                    <GridViewColumn Header="Närvaro" Width="50" DisplayMemberBinding="{Binding Attendance}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="lblWelcome" Content="Välkommen till fritidshem" HorizontalAlignment="Left" Margin="527,16,0,0" VerticalAlignment="Top" Width="216" FontSize="18" Grid.Row="1"/>
        <Label x:Name="label" Content="Barn" HorizontalAlignment="Left" Margin="117,62,0,0" VerticalAlignment="Top" RenderTransformOrigin="3.835,0.497" FontSize="16" FontWeight="Bold" Grid.Row="1"/>
        <Button x:Name="btnSearchChild" Content="Sök barn" HorizontalAlignment="Left" Margin="527,62,0,0" VerticalAlignment="Top" Width="103" Click="BtnSearchChild_Click" Height="26" Style="{StaticResource ButtonStyleNormal}" Grid.Row="1"/>
        <TextBox x:Name="txtNameChild" HorizontalAlignment="Left" Height="24" Margin="307,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215" RenderTransformOrigin="0.142,0.625" AutomationProperties.HelpText="Sök barn" Grid.Row="1"/>
        <Button x:Name="btnEmptySearch" Content="Töm sökning" HorizontalAlignment="Left" Margin="635,62,0,0" VerticalAlignment="Top" Width="103" Height="26" Click="BtnEmptySearch_Click" Style="{StaticResource ButtonStyleNormal}" IsEnabled="False" Grid.Row="1"/>

        <ListView x:Name="listViewGuardian" HorizontalAlignment="Left" Height="124" Margin="117,147,0,0" VerticalAlignment="Top" Width="623" Grid.Row="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Förnamn" Width="150" DisplayMemberBinding="{Binding Firstname}"/>
                    <GridViewColumn Header="Efternamn" Width="150" DisplayMemberBinding="{Binding Lastname}"/>
                    <GridViewColumn Header="Telefon" Width="150" DisplayMemberBinding="{Binding Phone}"/>
                    <GridViewColumn Header="Epost" Width="170" DisplayMemberBinding="{Binding Email}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="label_Copy" Content="Vårdnadshavare för valt barn" HorizontalAlignment="Left" Margin="117,116,0,0" VerticalAlignment="Top" RenderTransformOrigin="3.835,0.497" FontSize="16" FontWeight="Bold" Grid.Row="2"/>
        <Button x:Name="btnAbscense" Content="Frånvarande" HorizontalAlignment="Left" Margin="225,81,0,0" VerticalAlignment="Top" Width="104" Click="BtnSearchChild_Click" Height="26" Grid.Row="2" Style="{StaticResource ButtonStyleNormal}"/>
        <Button x:Name="btnChildHome" Content="Går hem" HorizontalAlignment="Left" Margin="117,81,0,0" VerticalAlignment="Top" Width="103" Click="BtnSearchChild_Click" Height="26" Grid.Row="2" Style="{StaticResource ButtonStyleNormal}"/>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="279" Margin="756,94,0,0" Grid.Row="1" VerticalAlignment="Top" Width="458" Grid.RowSpan="2">
            <TabItem Header="Klass 1">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="79*"/>
                        <ColumnDefinition Width="81*"/>
                        <ColumnDefinition Width="60*"/>
                        <ColumnDefinition Width="399*"/>
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="ListViewStaff1_Class1" HorizontalAlignment="Left" Height="251" VerticalAlignment="Top" Width="452" SelectionChanged="ListViewStaff1_SelectionChanged_1" Grid.ColumnSpan="4">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Förnamn" Width="150" DisplayMemberBinding="{Binding Firstname}"/>
                                <GridViewColumn Header="Efternamn" Width="150" DisplayMemberBinding="{Binding Lastname}"/>
                                <GridViewColumn Header="Hem själv" Width="100" DisplayMemberBinding="{Binding LeaveAlone}"/>
                                <GridViewColumn Header="Närvaro" Width="50" DisplayMemberBinding="{Binding Attendance}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Klass 2">
                <Grid Background="#FFE5E5E5">
                    <ListView x:Name="ListViewStaff1_Class2" HorizontalAlignment="Left" Height="251" VerticalAlignment="Top" Width="625" SelectionChanged="ListViewStaff1_SelectionChanged_1">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Förnamn" Width="150" DisplayMemberBinding="{Binding Firstname}"/>
                                <GridViewColumn Header="Efternamn" Width="150" DisplayMemberBinding="{Binding Lastname}"/>
                                <GridViewColumn Header="Hem själv" Width="100" DisplayMemberBinding="{Binding LeaveAlone}"/>
                                <GridViewColumn Header="Närvaro" Width="50" DisplayMemberBinding="{Binding Attendance}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Klass 3">
                <ListView x:Name="ListViewStaff1_Class3" HorizontalAlignment="Left" Height="251" VerticalAlignment="Top" Width="625" SelectionChanged="ListViewStaff1_SelectionChanged_1">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Förnamn" Width="150" DisplayMemberBinding="{Binding Firstname}"/>
                            <GridViewColumn Header="Efternamn" Width="150" DisplayMemberBinding="{Binding Lastname}"/>
                            <GridViewColumn Header="Hem själv" Width="100" DisplayMemberBinding="{Binding LeaveAlone}"/>
                            <GridViewColumn Header="Närvaro" Width="50" DisplayMemberBinding="{Binding Attendance}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
