<Window x:Class="WpfApp1.Views.ListViewStaff"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Views"
        mc:Ignorable="d"
        Title="ListViewStaff" Height="527" Width="1083" Activated="Window_Activated">
    <Grid>
        <ListView x:Name="ListViewStaff1" HorizontalAlignment="Left" Height="211" Margin="22,59,0,0" VerticalAlignment="Top" Width="450" SelectionChanged="ListViewStaff1_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Förnamn" Width="150" DisplayMemberBinding="{Binding Firstname}"/>
                    <GridViewColumn Header="Efternamn" Width="150" DisplayMemberBinding="{Binding Lastname}"/>
                    <GridViewColumn Header="Klass" Width="150" DisplayMemberBinding="{Binding Class}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="label" Content="Barn" HorizontalAlignment="Left" Margin="22,18,0,0" VerticalAlignment="Top" RenderTransformOrigin="3.835,0.497" Height="36" Width="38"/>

        <Button x:Name="btnSearchChild" Content="Sök barn" HorizontalAlignment="Left" Margin="190,21,0,0" VerticalAlignment="Top" Width="75" Click="BtnSearchChild_Click"/>
        <TextBox x:Name="txtNameChild" HorizontalAlignment="Left" Height="23" Margin="62,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ListView x:Name="listViewGuardian" HorizontalAlignment="Left" Height="92" Margin="22,342,0,0" VerticalAlignment="Top" Width="450">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Förnamn" Width="110" DisplayMemberBinding="{Binding Firstname}"/>
                    <GridViewColumn Header="Efternamn" Width="110" DisplayMemberBinding="{Binding Lastname}"/>
                    <GridViewColumn Header="Telefon" Width="110" DisplayMemberBinding="{Binding Phone}"/>
                    <GridViewColumn Header="Epost" Width="115" DisplayMemberBinding="{Binding Epost}"/>

                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="button_Copy" Content="Frånvaro" HorizontalAlignment="Left" Margin="22,274,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="button_Copy1" Content="Går hem" HorizontalAlignment="Left" Margin="102,274,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.253,0.65"/>
        <Label x:Name="label_Copy" Content="Vårdnadshavare" HorizontalAlignment="Left" Margin="22,306,0,0" VerticalAlignment="Top" RenderTransformOrigin="3.835,0.497" Height="31" Width="105"/>
    </Grid>
</Window>
