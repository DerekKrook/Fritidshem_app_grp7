<Window x:Class="WpfApp1.ListViewStaff"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ListViewStaff" Height="598" Width="1039" Activated="Window_Activated">
    <Grid Margin="271,2,2,-2">
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="14*"/>
        </Grid.RowDefinitions>
        <ListView x:Name="ListViewStaff1" HorizontalAlignment="Left" Height="280" Margin="117,55,0,0" VerticalAlignment="Top" Width="620" SelectionChanged="ListViewStaff1_SelectionChanged" Grid.RowSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Förnamn" Width="150" DisplayMemberBinding="{Binding Firstname}"/>
                    <GridViewColumn Header="Efternamn" Width="150" DisplayMemberBinding="{Binding Lastname}"/>
                    <GridViewColumn Header="Klass" Width="170" DisplayMemberBinding="{Binding Class}"/>
                    <GridViewColumn Header="Hem själv" Width="100" DisplayMemberBinding="{Binding LeaveAlone}"/>
                    <GridViewColumn Header="Närvaro" Width="50" DisplayMemberBinding="{Binding Attendance}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="label" Content="Barn" HorizontalAlignment="Left" Margin="117,21,0,0" VerticalAlignment="Top" RenderTransformOrigin="3.835,0.497" FontSize="16" FontWeight="Bold"/>

        <Button x:Name="btnSearchChild" Content="Sök barn" HorizontalAlignment="Left" Margin="601,26,0,0" VerticalAlignment="Top" Width="139" Click="BtnSearchChild_Click"/>
        <TextBox x:Name="txtNameChild" HorizontalAlignment="Left" Height="24" Margin="476,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ListView x:Name="listViewGuardian" HorizontalAlignment="Left" Height="124" Margin="117,116,0,0" VerticalAlignment="Top" Width="623" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Förnamn" Width="150" DisplayMemberBinding="{Binding Firstname}"/>
                    <GridViewColumn Header="Efternamn" Width="150" DisplayMemberBinding="{Binding Lastname}"/>
                    <GridViewColumn Header="Telefon" Width="150" DisplayMemberBinding="{Binding Phone}"/>
                    <GridViewColumn Header="Epost" Width="170" DisplayMemberBinding="{Binding Email}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="label_Copy" Content="Vårdnadshavare" HorizontalAlignment="Left" Margin="117,85,0,0" VerticalAlignment="Top" RenderTransformOrigin="3.835,0.497" FontSize="16" FontWeight="Bold" Grid.Row="1"/>
        <Button x:Name="btnAbscense" Content="Frånvarande" HorizontalAlignment="Left" Margin="318,24,0,0" VerticalAlignment="Top" Width="139" Click="BtnSearchChild_Click"/>
        <Button x:Name="btnChildHome" Content="Går hem" HorizontalAlignment="Left" Margin="179,24,0,0" VerticalAlignment="Top" Width="139" Click="BtnSearchChild_Click"/>
    </Grid>
</Window>
