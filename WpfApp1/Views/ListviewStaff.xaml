<Window x:Class="WpfApp1.ListViewStaff"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ListViewStaff" Style="{StaticResource MyWindowStyle}" Activated="Window_Activated">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="85"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="14*"/>
        </Grid.RowDefinitions>

        <local:StaffMenu Grid.Row="0">

        </local:StaffMenu>

        <ListView x:Name="ListViewStaff1" HorizontalAlignment="Left" Height="63" Margin="794,45,0,0" VerticalAlignment="Top" Width="476" Grid.Row="1" SelectionChanged="ListViewStaff1_SelectionChanged_1" Visibility="Hidden">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Förnamn" Width="150" DisplayMemberBinding="{Binding Firstname}"/>
                    <GridViewColumn Header="Efternamn" Width="150" DisplayMemberBinding="{Binding Lastname}"/>
                    <GridViewColumn Header="Klass" Width="100" DisplayMemberBinding="{Binding Class}"/>
                    <GridViewColumn Header="Hem själv" Width="70" DisplayMemberBinding="{Binding LeaveAlone}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="lblWelcome" Content="Välkommen till fritidshem" HorizontalAlignment="Left" Margin="527,16,0,0" VerticalAlignment="Top" Width="216" FontSize="18" Grid.Row="1"/>
        <Label x:Name="label" Content="Barn" HorizontalAlignment="Left" Margin="35,67,0,0" VerticalAlignment="Top" RenderTransformOrigin="3.835,0.497" FontSize="16" FontWeight="Bold" Grid.Row="1"/>
        <Button x:Name="btnSearchChild" Content="Sök barn" HorizontalAlignment="Left" Margin="1014,14,0,0" VerticalAlignment="Top" Width="103" Click="BtnSearchChild_Click" Height="26" Style="{StaticResource ButtonStyleNormal}" Grid.Row="1"/>
        <TextBox x:Name="txtNameChild" HorizontalAlignment="Left" Height="24" Margin="794,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215" RenderTransformOrigin="0.142,0.625" AutomationProperties.HelpText="Sök barn" Grid.Row="1"/>
        <Button x:Name="btnEmptySearch" Content="Avbryt sök" HorizontalAlignment="Left" Margin="1122,14,0,0" VerticalAlignment="Top" Width="103" Height="26" Click="BtnEmptySearch_Click" Style="{StaticResource ButtonStyleNormal}" Grid.Row="1" Visibility="Hidden" />

        <ListView x:Name="listViewGuardian" HorizontalAlignment="Left" Height="121" Margin="35,158,0,0" VerticalAlignment="Top" Width="624" Grid.Row="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Förnamn" Width="150" DisplayMemberBinding="{Binding Firstname}"/>
                    <GridViewColumn Header="Efternamn" Width="150" DisplayMemberBinding="{Binding Lastname}"/>
                    <GridViewColumn Header="Telefon" Width="150" DisplayMemberBinding="{Binding Phone}"/>
                    <GridViewColumn Header="Epost" Width="170" DisplayMemberBinding="{Binding Email}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="label_Copy" Content="Vårdnadshavare för valt barn" HorizontalAlignment="Left" Margin="35,127,0,0" VerticalAlignment="Top" RenderTransformOrigin="3.835,0.497" FontSize="16" FontWeight="Bold" Grid.Row="2" Height="31" Width="228"/>
        <Button x:Name="btnAbscense" Content="Frånvarande" HorizontalAlignment="Left" Margin="35,80,0,0" VerticalAlignment="Top" Width="104" Click="BtnSearchChild_Click" Height="26" Grid.Row="2" Style="{StaticResource ButtonStyleNormal}"/>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="278" Margin="35,103,0,0" Grid.Row="1" VerticalAlignment="Top" Width="624" Grid.RowSpan="2">
            <TabItem Header="Avdelning 1">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="79*"/>
                        <ColumnDefinition Width="81*"/>
                        <ColumnDefinition Width="60*"/>
                        <ColumnDefinition Width="399*"/>
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="ListViewStaff1_Class1" HorizontalAlignment="Left" Height="251" VerticalAlignment="Top" Width="605" SelectionChanged="ListViewStaff1_Class1_SelectionChanged" Grid.ColumnSpan="4" Margin="0,0,0,-7">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Förnamn" Width="200" DisplayMemberBinding="{Binding Firstname}"/>
                                <GridViewColumn Header="Efternamn" Width="200" DisplayMemberBinding="{Binding Lastname}"/>
                                <GridViewColumn Header="Klass" Width="200" DisplayMemberBinding="{Binding Class}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Avdelning 2">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,33">
                    <ListView x:Name="ListViewStaff1_Class2" HorizontalAlignment="Left" Height="248" VerticalAlignment="Top" Width="605" SelectionChanged="ListViewStaff1_Class2_SelectionChanged" Margin="0,0,0,-37">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Förnamn" Width="200" DisplayMemberBinding="{Binding Firstname}"/>
                                <GridViewColumn Header="Efternamn" Width="200" DisplayMemberBinding="{Binding Lastname}"/>
                                <GridViewColumn Header="Klass" Width="200" DisplayMemberBinding="{Binding Class}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Avdelning 3">
                <ListView x:Name="ListViewStaff1_Class3" HorizontalAlignment="Left" Height="250" VerticalAlignment="Top" Width="608" SelectionChanged="ListViewStaff1_Class3_SelectionChanged">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Förnamn" Width="200" DisplayMemberBinding="{Binding Firstname}"/>
                            <GridViewColumn Header="Efternamn" Width="200" DisplayMemberBinding="{Binding Lastname}"/>
                            <GridViewColumn Header="Klass" Width="200" DisplayMemberBinding="{Binding Class}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
        </TabControl>
        <Label x:Name="lblStaffFirstname" Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top"/>
    </Grid>
</Window>
